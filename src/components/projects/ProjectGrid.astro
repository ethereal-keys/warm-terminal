---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["project-grid", className]}>
  <slot />
</div>

<style>
  .project-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2);
  }

  @media (max-width: 640px) {
    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>