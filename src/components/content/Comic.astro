---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  class?: string;
  align?: 'left' | 'center' | 'right';
  width?: string;
}

const { 
  src, 
  alt, 
  caption, 
  class: className,
  align = 'center',
  width
} = Astro.props;
---

<figure class:list={["comic", `align-${align}`, className]} style={width ? `width: ${width};` : ''}>
  <div class="comic-frame">
    <span class="corner corner--tl">┌</span>
    <span class="corner corner--tr">┐</span>
    <span class="corner corner--bl">└</span>
    <span class="corner corner--br">┘</span>

    <img src={src} alt={alt} class="comic-image" loading="lazy" />
  </div>

  {caption && (
    <figcaption class="comic-caption">
      <span class="annotation">{caption}</span>
    </figcaption>
  )}
</figure>

<style>
  .comic {
    margin: var(--space-4) 0;
    display: block;
    clear: both;
    max-width: 100%;
}

  .comic.align-center {
    margin-left: auto;
    margin-right: auto;
  }

  .comic.align-left {
    float: left;
    margin-right: var(--space-4);
    margin-bottom: var(--space-2);
  }

  .comic.align-right {
    float: right;
    margin-left: var(--space-4);
    margin-bottom: var(--space-2);
  }

  .comic-frame {
    position: relative;
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    padding: var(--space-2);
    transform: rotate(-0.5deg);
    width: fit-content;
    margin: 0 auto;
}

  .corner {
    position: absolute;
    font-size: var(--text-sm);
    line-height: 1;
    color: var(--text-ghost);
    background: var(--bg-primary);
    padding: 0 3px;
  }

  .corner--tl { top: -1px; left: -1px; }
  .corner--tr { top: -1px; right: -1px; }
  .corner--bl { bottom: -1px; left: -1px; }
  .corner--br { bottom: -1px; right: -1px; }

  .comic-image {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .comic-caption {
    margin-top: var(--space-2);
    text-align: center;
}

  .annotation {
    font-family: var(--font-annotation);
    font-size: var(--text-base);
    color: var(--text-muted);
    transform: rotate(-1deg);
    display: inline-block;
  }
</style>